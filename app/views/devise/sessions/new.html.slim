
- content_for :sidebar do
  .card
    .card-body
      p
        a.btn.btn-primary.btn-large(href='/auth/twitter' data-no-turbolinks)
          i.fa.fa-twitter.fa-2x.fa-fw
        = ' '
        a.btn.btn-primary.btn-large(href='/auth/facebook' data-no-turbolinks)
          i.fa.fa-facebook.fa-2x.fa-fw
    .card-footer
      = render "devise/shared/links"
      br

h2 Log in

.stand-out
  p
    = t 'sessions.new.intro'


= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.input :email, :autofocus => true, hint: false
  = f.input :password
  = f.input :remember_me, wrapper: :vertical_boolean, :as => :boolean if devise_mapping.rememberable?
  = f.button :submit, "Log in", :class => 'btn-primary'
br
